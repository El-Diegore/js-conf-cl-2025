---
interface Props {
  title: string
  body: string
}

const { title, body } = Astro.props
---

<div class="info-card">
  <h2>{title}</h2>
  <p>{body}</p>
</div>
<style>
  .info-card {
    background-color: #0C0A09;
    border: 1px solid #292524;
    border-radius: 0.5rem;
    padding: 1.5rem;
    gap: 1rem;

    & p {
      color: #78716C;
    }
  }
</style>
