---
interface Props {
  title: string
  body: string
  horizontal?: boolean
}

const { title, body, horizontal } = Astro.props
---

<div class="info-card" class:list={horizontal ? 'horizontal' : ''}>
  <h2>{title}</h2>
  <p>{body}</p>
</div>
<style>
  .info-card {
    background-color: #0C0A09;
    border: 1px solid #292524;
    border-radius: 0.5rem;
    padding: 1.5rem;
    gap: 1rem;

    & p {
      color: #78716C;
    }

    &.horizontal {
      display: flex;
    }
  }
</style>
